@model LogoutViewModel
@{
    Layout = null;
}
<link href="~/assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
<link href="~/assets/css/style.bundle.css" rel="stylesheet" type="text/css" />

<div class="logout-page text-center">
    <div class="d-flex flex-column align-items-center mt-5">
        <div class="lead">
            <h1>Đăng xuất</h1>
            <p>Bạn có muốn đăng xuất khỏi IdentityServer không?</p>
        </div>

        <form asp-action="Logout">
            <input type="hidden" name="logoutId" value="@Model.LogoutId" />
            <div class="d-flex justify-content-center gap-3 ">
                <div class="form-group">
                    <button class="btn btn-primary text-white">Xác nhận</button>
                </div>
                <div class="form-group">
                    <a class="btn btn-secondary" asp-action="Index" asp-controller="Home">Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/assets/plugins/global/plugins.bundle.js"></script>
<script src="~/assets/js/scripts.bundle.js"></script>
<script src="~/assets/js/widgets.bundle.js"></script>
<script src="~/assets/js/custom/widgets.js"></script>