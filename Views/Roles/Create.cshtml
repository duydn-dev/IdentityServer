@model IdentityServerHost.Models.ViewModels.RoleViewModel
@{
    ViewData["Title"] = "Thêm vai trò";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Thêm vai trò</h1>
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <li class="breadcrumb-item text-muted">
                    <a asp-controller="Home" asp-action="Index" class="text-muted text-hover-primary">Trang chủ</a>
                </li>
                <li class="breadcrumb-item"><span class="bullet bg-gray-500 w-5px h-2px"></span></li>
                <li class="breadcrumb-item text-muted">
                    <a asp-action="Index" class="text-muted text-hover-primary">Vai trò</a>
                </li>
                <li class="breadcrumb-item"><span class="bullet bg-gray-500 w-5px h-2px"></span></li>
                <li class="breadcrumb-item text-muted">Thêm mới</li>
            </ul>
        </div>
    </div>
</div>

<div id="kt_app_content" class="app-content flex-column-fluid">
    <div id="kt_app_content_container" class="app-container container-fluid">
        <div class="card card-flush">
            <div class="card-header">
                <h3 class="card-title">Thông tin vai trò</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-5"></div>
                    <div class="mb-5">
                        <label asp-for="Code" class="form-label required"></label>
                        <input asp-for="Code" class="form-control form-control-solid" placeholder="Nhập mã vai trò" />
                    </div>
                    <div class="mb-5">
                        <label asp-for="Name" class="form-label required"></label>
                        <input asp-for="Name" class="form-control form-control-solid" placeholder="Nhập tên vai trò" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Lưu</button>
                        <a asp-action="Index" class="btn btn-light">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

