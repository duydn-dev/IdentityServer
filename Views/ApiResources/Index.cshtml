@model IEnumerable<IdentityServer4.EntityFramework.Entities.ApiResource>
@{
    ViewData["Title"] = "API Resources";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var search = ViewBag.Search as string ?? "";
    var page = (int)(ViewBag.Page ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 10);
    var totalCount = (int)(ViewBag.TotalCount ?? 0);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
}

<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">API Resources</h1>
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <li class="breadcrumb-item text-muted">
                    <a asp-controller="Home" asp-action="Index" class="text-muted text-hover-primary">Trang chủ</a>
                </li>
                <li class="breadcrumb-item"><span class="bullet bg-gray-500 w-5px h-2px"></span></li>
                <li class="breadcrumb-item text-muted">Cấu hình</li>
                <li class="breadcrumb-item"><span class="bullet bg-gray-500 w-5px h-2px"></span></li>
                <li class="breadcrumb-item text-muted">API Resources</li>
            </ul>
        </div>
        <div class="d-flex align-items-center gap-2 gap-lg-3">
            <a asp-action="Create" class="btn btn-sm fw-bold btn-primary">Thêm API Resource</a>
        </div>
    </div>
</div>

<div id="kt_app_content" class="app-content flex-column-fluid">
    <div id="kt_app_content_container" class="app-container container-fluid">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="card card-flush">
            @Html.AntiForgeryToken()
            <div class="card-header align-items-center py-5 gap-2 gap-md-5">
                <div class="card-title">
                    <form asp-action="Index" method="get" class="d-flex align-items-center gap-2 flex-wrap">
                        <input type="hidden" name="page" value="1" />
                        <input type="text" name="search" value="@search" class="form-control form-control-solid w-250px" placeholder="Tìm theo tên..." />
                        <select name="pageSize" class="form-select form-select-solid w-100px" onchange="this.form.submit()">
                            @if (pageSize == 10) { <option value="10" selected>10</option> } else { <option value="10">10</option> }
                            @if (pageSize == 20) { <option value="20" selected>20</option> } else { <option value="20">20</option> }
                            @if (pageSize == 50) { <option value="50" selected>50</option> } else { <option value="50">50</option> }
                        </select>
                        <button type="submit" class="btn btn-sm btn-light-primary">Tìm kiếm</button>
                    </form>
                </div>
            </div>
            <div class="card-body pt-0">
                <table class="table align-middle table-row-dashed fs-6 gy-5">
                    <thead>
                        <tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
                            <th class="min-w-125px">Tên</th>
                            <th class="min-w-125px">Tên hiển thị</th>
                            <th class="min-w-80px">Bật</th>
                            <th class="min-w-150px">Scopes</th>
                            <th class="text-end min-w-100px">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody class="fw-semibold text-gray-600">
                        @foreach (var r in Model)
                        {
                            <tr data-id="@r.Id">
                                <td>@r.Name</td>
                                <td>@(r.DisplayName ?? "-")</td>
                                <td>
                                    @if (r.Enabled) { <span class="badge badge-light-success">Bật</span> }
                                    else { <span class="badge badge-light-danger">Tắt</span> }
                                </td>
                                <td>@string.Join(", ", r.Scopes?.Select(s => s.Scope) ?? Array.Empty<string>())</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@r.Id" class="btn btn-sm btn-light btn-active-light-primary">Sửa</a>
                                    @if (!r.NonEditable)
                                    {
                                        <button type="button" class="btn btn-sm btn-light btn-active-light-danger btn-delete" data-id="@r.Id" data-name="@r.Name">Xóa</button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (!Model.Any())
                {
                    <div class="text-center py-10 text-muted">Chưa có API Resource nào.</div>
                }
                @if (totalCount > 0)
                {
                    <div class="d-flex justify-content-between align-items-center mt-5 flex-wrap gap-2">
                        <div class="text-muted fs-7">Hiển thị @((page - 1) * pageSize + 1)-@(Math.Min(page * pageSize, totalCount)) / @totalCount</div>
                        @if (totalPages > 1)
                        {
                        <nav>
                            <ul class="pagination pagination-sm mb-0">
                                <li class="page-item @(page <= 1 ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(page - 1)" asp-route-search="@search" asp-route-pageSize="@pageSize">Trước</a>
                                </li>
                                @for (var i = Math.Max(1, page - 2); i <= Math.Min(totalPages, page + 2); i++)
                                {
                                    <li class="page-item @(i == page ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@search" asp-route-pageSize="@pageSize">@i</a>
                                    </li>
                                }
                                <li class="page-item @(page >= totalPages ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(page + 1)" asp-route-search="@search" asp-route-pageSize="@pageSize">Sau</a>
                                </li>
                            </ul>
                        </nav>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
<script>
$(document).ready(function() {
    $('.btn-delete').on('click', function() {
        var id = $(this).data('id');
        var name = $(this).data('name');
        if (!confirm('Xóa API Resource "' + name + '"?')) return;
        var token = $('input[name="__RequestVerificationToken"]').val();
        $.ajax({
            url: '@Url.Action("DeleteAjax", "ApiResources")',
            type: 'POST',
            data: { id: id, __RequestVerificationToken: token },
            success: function(result) {
                if (result.success) {
                    $('tr[data-id="' + id + '"]').fadeOut(300, function() { $(this).remove(); });
                    alert(result.message);
                } else alert(result.message);
            }
        });
    });
});
</script>
}
