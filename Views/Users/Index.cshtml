@model IEnumerable<IdentityServerHost.Models.ApplicationUser>
@using IdentityServerHost.Models.ViewModels
@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var search = ViewBag.Search as string ?? "";
    var page = (int)(ViewBag.Page ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 10);
    var totalCount = (int)(ViewBag.TotalCount ?? 0);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var paginationModel = new PaginationViewModel { Page = page, PageSize = pageSize, TotalCount = totalCount, ControllerName = "Users", RouteValues = new Dictionary<string, string?> { ["search"] = search } };
}

<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Người dùng</h1>
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <li class="breadcrumb-item text-muted">
                    <a asp-controller="Home" asp-action="Index" class="text-muted text-hover-primary">Trang chủ</a>
                </li>
                <li class="breadcrumb-item"><span class="bullet bg-gray-500 w-5px h-2px"></span></li>
                <li class="breadcrumb-item text-muted">Quản lý người dùng</li>
            </ul>
        </div>
        <div class="d-flex align-items-center gap-2 gap-lg-3">
            <a asp-action="Create" class="btn btn-sm fw-bold btn-primary">Thêm người dùng</a>
        </div>
    </div>
</div>

<div id="kt_app_content" class="app-content flex-column-fluid">
    <div id="kt_app_content_container" class="app-container container-fluid">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="card card-flush">
            @Html.AntiForgeryToken()
            <div class="card-header align-items-center py-5 gap-2 gap-md-5">
                <div class="card-title">
                    <form asp-action="Index" method="get" class="d-flex align-items-center gap-2 flex-wrap">
                        <input type="hidden" name="page" value="1" />
                        <div class="d-flex align-items-center position-relative my-1">
                            <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-4">
                                <span class="path1"></span>
                                <span class="path2"></span>
                            </i>
                            <input type="text" name="search" value="@search" class="form-control form-control-solid w-250px ps-12" placeholder="Tìm theo tên, email..." />
                        </div>
                        <partial name="_PageSizeSelector" model="@(new PaginationViewModel { PageSize = pageSize })" />
                        <span class="text-muted fs-7">/ trang</span>
                        <button type="submit" class="btn btn-sm btn-light-primary">Tìm kiếm</button>
                    </form>
                </div>
            </div>
            <div class="card-body pt-0">
                <table class="table align-middle table-row-dashed fs-6 gy-5" id="usersTable">
                    <thead>
                        <tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
                            <th class="min-w-125px">Tên đăng nhập</th>
                            <th class="min-w-125px">Email</th>
                            <th class="min-w-100px">Số điện thoại</th>
                            <th class="min-w-80px">Xác nhận email</th>
                            <th class="text-end min-w-100px">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody class="fw-semibold text-gray-600">
                        @foreach (var user in Model)
                        {
                            <tr data-user-id="@user.Id">
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>@user.PhoneNumber</td>
                                <td>
                                    @if (user.EmailConfirmed)
                                    { <span class="badge badge-light-success">Đã xác nhận</span> }
                                    else
                                    { <span class="badge badge-light-warning">Chưa xác nhận</span> }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-light btn-active-light-primary">Sửa</a>
                                    <button type="button" class="btn btn-sm btn-light btn-active-light-danger btn-delete" data-id="@user.Id" data-name="@user.UserName">Xóa</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (!Model.Any())
                {
                    <div class="text-center py-10 text-muted">Chưa có người dùng nào.</div>
                }
                <partial name="_Pagination" model="paginationModel" />
            </div>
        </div>
    </div>
</div>

@section scripts {
<script>
$(document).ready(function() {
    $('.btn-delete').on('click', function() {
        var id = $(this).data('id');
        var name = $(this).data('name');
        if (!confirm('Bạn có chắc muốn xóa người dùng "' + name + '"?')) return;

        var token = $('input[name="__RequestVerificationToken"]').val();
        $.ajax({
            url: '@Url.Action("DeleteAjax", "Users")',
            type: 'POST',
            data: { id: id, __RequestVerificationToken: token },
            success: function(result) {
                if (result.success) {
                    $('tr[data-user-id="' + id + '"]').fadeOut(300, function() { $(this).remove(); });
                    alert(result.message);
                } else {
                    alert(result.message);
                }
            },
            error: function() { alert('Có lỗi xảy ra.'); }
        });
    });
});
</script>
}
