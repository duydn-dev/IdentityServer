@model IdentityServerHost.Models.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Sửa người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roles = ViewBag.Roles as List<string> ?? new List<string>();
}

<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Sửa người dùng</h1>
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <li class="breadcrumb-item text-muted">
                    <a asp-controller="Home" asp-action="Index" class="text-muted text-hover-primary">Trang chủ</a>
                </li>
                <li class="breadcrumb-item"><span class="bullet bg-gray-500 w-5px h-2px"></span></li>
                <li class="breadcrumb-item text-muted">
                    <a asp-action="Index" class="text-muted text-hover-primary">Người dùng</a>
                </li>
                <li class="breadcrumb-item"><span class="bullet bg-gray-500 w-5px h-2px"></span></li>
                <li class="breadcrumb-item text-muted">Sửa</li>
            </ul>
        </div>
    </div>
</div>

<div id="kt_app_content" class="app-content flex-column-fluid">
    <div id="kt_app_content_container" class="app-container container-fluid">
        <div class="card card-flush">
            <div class="card-header">
                <h3 class="card-title">Thông tin người dùng</h3>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-5"></div>
                    <div class="row mb-5">
                        <div class="col-md-6">
                            <label asp-for="UserName" class="form-label required"></label>
                            <input asp-for="UserName" class="form-control form-control-solid" placeholder="Tên đăng nhập" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label required"></label>
                            <input asp-for="Email" type="email" class="form-control form-control-solid" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-md-6">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control form-control-solid" placeholder="Để trống nếu không đổi mật khẩu" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control form-control-solid" placeholder="Xác nhận mật khẩu mới" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-md-6">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control form-control-solid" placeholder="Số điện thoại" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Vai trò</label>
                            <div class="d-flex flex-wrap gap-3">
                                @foreach (var role in roles)
                                {
                                    <label class="form-check form-check-custom form-check-solid">
                                        <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@role"
                                               @(Model.SelectedRoles?.Contains(role) == true ? "checked" : "") />
                                        <span class="form-check-label">@role</span>
                                    </label>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-md-4">
                            <label class="form-check form-switch form-check-custom form-check-solid">
                                <input asp-for="EmailConfirmed" class="form-check-input" />
                                <span class="form-check-label" asp-for="EmailConfirmed">Xác nhận qua Email</span>
                            </label>
                        </div>
                        <div class="col-md-4">
                            <label class="form-check form-switch form-check-custom form-check-solid">
                                <input asp-for="PhoneNumberConfirmed" class="form-check-input" />
                                <span class="form-check-label" asp-for="PhoneNumberConfirmed">Xác nhận qua SĐT</span>
                            </label>
                        </div>
                        <div class="col-md-4">
                            <label class="form-check form-switch form-check-custom form-check-solid">
                                <input asp-for="TwoFactorEnabled" class="form-check-input" />
                                <span class="form-check-label" asp-for="TwoFactorEnabled">2FA</span>
                            </label>
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                        <a asp-action="Index" class="btn btn-light">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
