@model IEnumerable<IdentityServer4.EntityFramework.Entities.DeviceFlowCodes>
@{
    ViewData["Title"] = "Device Codes";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userCode = ViewBag.UserCode as string ?? "";
    var clientId = ViewBag.ClientId as string ?? "";
    var page = (int)(ViewBag.Page ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 20);
    var totalCount = (int)(ViewBag.TotalCount ?? 0);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
    var paginationModel = new PaginationViewModel { Page = page, PageSize = pageSize, TotalCount = totalCount, ControllerName = "DeviceCodes", PageSizeOptions = new[] { 20, 50 }, RouteValues = new Dictionary<string, string?> { ["userCode"] = userCode, ["clientId"] = clientId } };
}

<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Device Codes</h1>
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <li class="breadcrumb-item text-muted"><a asp-controller="Home" asp-action="Index" class="text-muted text-hover-primary">Trang chủ</a></li>
                <li class="breadcrumb-item"><span class="bullet bg-gray-500 w-5px h-2px"></span></li>
                <li class="breadcrumb-item text-muted">Tokens & Sessions</li>
                <li class="breadcrumb-item"><span class="bullet bg-gray-500 w-5px h-2px"></span></li>
                <li class="breadcrumb-item text-muted">Device Codes</li>
            </ul>
        </div>
    </div>
</div>

<div id="kt_app_content" class="app-content flex-column-fluid">
    <div id="kt_app_content_container" class="app-container container-fluid">
        @if (TempData["Success"] != null)
        { <div class="alert alert-success alert-dismissible fade show"><span>@TempData["Success"]</span><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div> }
        @if (TempData["Error"] != null)
        { <div class="alert alert-danger alert-dismissible fade show"><span>@TempData["Error"]</span><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div> }

        <div class="card card-flush">
            <div class="card-header align-items-center py-5 gap-2 gap-md-5">
                <form asp-action="Index" method="get" class="d-flex align-items-center gap-2 flex-wrap">
                    <input type="hidden" name="page" value="1" />
                    <input type="text" name="userCode" value="@userCode" class="form-control form-control-solid w-150px" placeholder="User Code" />
                    <input type="text" name="clientId" value="@clientId" class="form-control form-control-solid w-150px" placeholder="Client ID" />
                    <partial name="_PageSizeSelector" model="@(new PaginationViewModel { PageSize = pageSize, PageSizeOptions = new[] { 20, 50 } })" />
                    <button type="submit" class="btn btn-sm btn-light-primary">Lọc</button>
                </form>
            </div>
            <div class="card-body pt-0">
                <table class="table align-middle table-row-dashed fs-6 gy-5">
                    <thead>
                        <tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
                            <th>User Code</th>
                            <th>Client ID</th>
                            <th>Subject ID</th>
                            <th>Creation</th>
                            <th>Expiration</th>
                            <th class="text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var d in Model)
                        {
                            <tr>
                                <td>@d.UserCode</td>
                                <td>@d.ClientId</td>
                                <td>@(d.SubjectId ?? "-")</td>
                                <td>@(d.CreationTime.ToString("yyyy-MM-dd HH:mm"))</td>
                                <td>@(d.Expiration?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                                <td class="text-end">
                                    <form asp-action="Remove" method="post" class="d-inline" onsubmit="return confirm('Xóa device code này?');">
                                        <input type="hidden" name="userCode" value="@d.UserCode" />
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-light-danger">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (!Model.Any())
                { <div class="text-center py-10 text-muted">Chưa có device code nào.</div> }
                <partial name="_Pagination" model="paginationModel" />
            </div>
        </div>
    </div>
</div>
