@model IdentityServer4.Models.ManageViewModels.IndexViewModel
@{
    ViewData["Title"] = "Tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <div class="app-container container-fluid d-flex flex-stack">
        <div class="page-title d-flex flex-column justify-content-center">
            <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3">Quản lý tài khoản</h1>
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-muted text-hover-primary">Trang chủ</a></li>
                <li class="breadcrumb-item"><span class="bullet bg-gray-500 w-5px h-2px"></span></li>
                <li class="breadcrumb-item text-muted">Tài khoản</li>
            </ul>
        </div>
    </div>
</div>

<div id="kt_app_content" class="app-content flex-column-fluid">
    <div class="app-container container-fluid">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        <div class="card card-flush">
            <div class="card-header">
                <h3 class="card-title">Xác thực hai yếu tố (2FA)</h3>
            </div>
            <div class="card-body">
                @if (Model.TwoFactorEnabled)
                {
                    <p class="text-success mb-3"><strong>2FA đã được bật.</strong></p>
                    <a asp-action="GenerateRecoveryCodes" class="btn btn-light me-2">Tạo mã khôi phục mới</a>
                    <a asp-action="Disable2fa" class="btn btn-warning">Tắt 2FA</a>
                }
                else
                {
                    <p class="text-muted mb-3">2FA chưa được bật. Kích hoạt để tăng cường bảo mật.</p>
                    <a asp-action="EnableAuthenticator" class="btn btn-primary">Kích hoạt 2FA</a>
                }
            </div>
        </div>
    </div>
</div>
