@model IEnumerable<IdentityServer4.EntityFramework.Entities.PersistedGrant>
@{
    ViewData["Title"] = "Persisted Grants";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var subjectId = ViewBag.SubjectId as string ?? "";
    var clientId = ViewBag.ClientId as string ?? "";
    var type = ViewBag.Type as string ?? "";
    var page = (int)(ViewBag.Page ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 20);
    var totalCount = (int)(ViewBag.TotalCount ?? 0);
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
}

<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
    <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
        <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
            <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Persisted Grants (Tokens)</h1>
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <li class="breadcrumb-item text-muted"><a asp-controller="Home" asp-action="Index" class="text-muted text-hover-primary">Trang chủ</a></li>
                <li class="breadcrumb-item"><span class="bullet bg-gray-500 w-5px h-2px"></span></li>
                <li class="breadcrumb-item text-muted">Tokens & Sessions</li>
                <li class="breadcrumb-item"><span class="bullet bg-gray-500 w-5px h-2px"></span></li>
                <li class="breadcrumb-item text-muted">Persisted Grants</li>
            </ul>
        </div>
    </div>
</div>

<div id="kt_app_content" class="app-content flex-column-fluid">
    <div id="kt_app_content_container" class="app-container container-fluid">
        @if (TempData["Success"] != null)
        { <div class="alert alert-success alert-dismissible fade show"><span>@TempData["Success"]</span><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div> }
        @if (TempData["Error"] != null)
        { <div class="alert alert-danger alert-dismissible fade show"><span>@TempData["Error"]</span><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div> }

        <div class="card card-flush">
            @Html.AntiForgeryToken()
            <div class="card-header align-items-center py-5 gap-2 gap-md-5">
                <form asp-action="Index" method="get" class="d-flex align-items-center gap-2 flex-wrap">
                    <input type="hidden" name="page" value="1" />
                    <input type="text" name="subjectId" value="@subjectId" class="form-control form-control-solid w-150px" placeholder="Subject ID" />
                    <input type="text" name="clientId" value="@clientId" class="form-control form-control-solid w-150px" placeholder="Client ID" />
                    <input type="text" name="type" value="@type" class="form-control form-control-solid w-120px" placeholder="Type" />
                    <select name="pageSize" class="form-select form-select-solid w-100px" onchange="this.form.submit()">
                        @if (pageSize == 20) { <option value="20" selected>20</option> } else { <option value="20">20</option> }
                        @if (pageSize == 50) { <option value="50" selected>50</option> } else { <option value="50">50</option> }
                        @if (pageSize == 100) { <option value="100" selected>100</option> } else { <option value="100">100</option> }
                    </select>
                    <button type="submit" class="btn btn-sm btn-light-primary">Lọc</button>
                </form>
            </div>
            <div class="card-body pt-0">
                <table class="table align-middle table-row-dashed fs-6 gy-5">
                    <thead>
                        <tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
                            <th class="min-w-100px">Key</th>
                            <th class="min-w-100px">Type</th>
                            <th class="min-w-100px">Subject ID</th>
                            <th class="min-w-100px">Client ID</th>
                            <th class="min-w-100px">Session ID</th>
                            <th class="min-w-100px">Creation</th>
                            <th class="min-w-100px">Expiration</th>
                            <th class="text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var g in Model)
                        {
                            <tr>
                                <td><span class="text-truncate d-inline-block" style="max-width:120px" title="@g.Key">@g.Key</span></td>
                                <td>@g.Type</td>
                                <td>@(g.SubjectId ?? "-")</td>
                                <td>@(g.ClientId ?? "-")</td>
                                <td>@(g.SessionId ?? "-")</td>
                                <td>@g.CreationTime.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@(g.Expiration?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                                <td class="text-end">
                                    <form asp-action="Revoke" method="post" class="d-inline" onsubmit="return confirm('Thu hồi token này?');">
                                        <input type="hidden" name="key" value="@g.Key" />
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-light-danger">Thu hồi</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @if (!Model.Any())
                { <div class="text-center py-10 text-muted">Chưa có token nào.</div> }
                @if (totalCount > 0)
                {
                    <div class="d-flex justify-content-between align-items-center mt-5">
                        <div class="text-muted fs-7">Hiển thị @((page-1)*pageSize+1)-@(Math.Min(page*pageSize, totalCount)) / @totalCount</div>
                        @if (totalPages > 1)
                        {
                            <nav>
                                <ul class="pagination pagination-sm mb-0">
                                    <li class="page-item @(page<=1?"disabled":"")"><a class="page-link" asp-action="Index" asp-route-page="@(page-1)" asp-route-subjectId="@subjectId" asp-route-clientId="@clientId" asp-route-type="@type" asp-route-pageSize="@pageSize">Trước</a></li>
                                    @for (var i = Math.Max(1, page - 2); i <= Math.Min(totalPages, page + 2); i++)
                                    { <li class="page-item @(i==page?"active":"")"><a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-subjectId="@subjectId" asp-route-clientId="@clientId" asp-route-type="@type" asp-route-pageSize="@pageSize">@i</a></li> }
                                    <li class="page-item @(page>=totalPages?"disabled":"")"><a class="page-link" asp-action="Index" asp-route-page="@(page+1)" asp-route-subjectId="@subjectId" asp-route-clientId="@clientId" asp-route-type="@type" asp-route-pageSize="@pageSize">Sau</a></li>
                                </ul>
                            </nav>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
